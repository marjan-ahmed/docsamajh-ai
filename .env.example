# LandingAI ADE API Keys
ADE_API_KEY=your_landing_ai_api_key_here

# Google Gemini Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Google OAuth (for Sign-In with Google)
CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth - Production (for Sign-In with GitHub)
GITHUB_CLIENT_ID=your_github_production_client_id_here
GITHUB_CLIENT_SECRET=your_github_production_client_secret_here

# GitHub OAuth - Local Development (OPTIONAL)
# Create a separate GitHub OAuth App with callback: http://localhost:8501
# If not set, GitHub login will only work in production
# GITHUB_CLIENT_ID_LOCAL=your_github_local_client_id_here
# GITHUB_CLIENT_SECRET_LOCAL=your_github_local_client_secret_here

# Environment (local or production)
ENV=local
